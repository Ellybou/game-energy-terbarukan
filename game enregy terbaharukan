<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game Energi Terbarukan</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        #gameIntro, #gameCanvas {
            display: none;
        }

        #gameIntro {
            background-color: #f4f4f4;
            width: 100vw;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        #gameIntro h1 {
            font-size: 36px;
            margin-bottom: 20px;
        }

        #gameIntro button {
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
        }

        #gameCanvas {
            display: block;
            background-color: #87CEEB;
        }

        #score {
            position: absolute;
            top: 10px;
            left: 10px;
            color: white;
            font-size: 24px;
        }

        #gameOver {
            display: none;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 36px;
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 20px;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div id="gameIntro">
        <h1>Selamat Datang di Game Energi Terbarukan</h1>
        <p>Tujuan game ini adalah menangkap elemen-elemen energi terbarukan seperti matahari, angin, dan air, serta menghindari elemen yang tidak terbarukan seperti batu bara.</p>
        <button id="startButton">Mulai Game</button>
    </div>

    <canvas id="gameCanvas"></canvas>
    <div id="score">Score: 0</div>
    <div id="gameOver">Game Over! <br> <button onclick="restartGame()">Main Lagi</button></div>

    <script>
        const startButton = document.getElementById('startButton');
        const gameIntro = document.getElementById('gameIntro');
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        const scoreElement = document.getElementById('score');
        const gameOverElement = document.getElementById('gameOver');
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        let score = 0;
        let gameActive = false;
        const player = {
            x: canvas.width / 2 - 50,
            y: canvas.height - 100,
            width: 100,
            height: 100,
            color: 'green',
            speed: 7,
            direction: 0,
        };

        const items = [];
        const itemTypes = [
            { color: 'yellow', type: 'matahari', points: 10 },
            { color: 'blue', type: 'air', points: 20 },
            { color: 'white', type: 'angin', points: 30 },
            { color: 'black', type: 'batubara', points: -50 }
        ];

        function createItem() {
            const itemType = itemTypes[Math.floor(Math.random() * itemTypes.length)];
            const item = {
                x: Math.random() * (canvas.width - 30),
                y: 0,
                width: 30,
                height: 30,
                color: itemType.color,
                type: itemType.type,
                points: itemType.points,
                speed: Math.random() * 5 + 2,
            };
            items.push(item);
        }

        function updatePlayer() {
            player.x += player.direction * player.speed;
            if (player.x < 0) player.x = 0;
            if (player.x + player.width > canvas.width) player.x = canvas.width - player.width;
        }

        function updateItems() {
            for (let i = 0; i < items.length; i++) {
                items[i].y += items[i].speed;
                if (items[i].y > canvas.height) {
                    items.splice(i, 1);
                    i--;
                } else if (items[i].x < player.x + player.width &&
                           items[i].x + items[i].width > player.x &&
                           items[i].y < player.y + player.height &&
                           items[i].y + items[i].height > player.y) {
                    score += items[i].points;
                    if (score < 0) {
                        endGame();
                    } else {
                        items.splice(i, 1);
                        i--;
                    }
                }
            }
        }

        function drawPlayer() {
            ctx.fillStyle = player.color;
            ctx.fillRect(player.x, player.y, player.width, player.height);
        }

        function drawItems() {
            for (let item of items) {
                ctx.fillStyle = item.color;
                ctx.fillRect(item.x, item.y, item.width, item.height);
            }
        }

        function drawScore() {
            scoreElement.innerText = `Score: ${score}`;
        }

        function gameLoop() {
            if (!gameActive) return;
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            updatePlayer();
            updateItems();
            drawPlayer();
            drawItems();
            drawScore();
            requestAnimationFrame(gameLoop);
        }

        function startGame() {
            score = 0;
            items.length = 0;
            gameActive = true;
            gameIntro.style.display = 'none';
            gameOverElement.style.display = 'none';
            canvas.style.display = 'block';
            scoreElement.style.display = 'block';
            setInterval(createItem, 1000);
            gameLoop();
        }

        function endGame() {
            gameActive = false;
            canvas.style.display = 'none';
            gameOverElement.style.display = 'block';
        }

        function restartGame() {
            startGame();
        }

        startButton.addEventListener('click', startGame);

        document.addEventListener('keydown', function(event) {
            if (event.key === 'ArrowLeft') {
                player.direction = -1;
            } else if (event.key === 'ArrowRight') {
                player.direction = 1;
            }
        });

        document.addEventListener('keyup', function(event) {
            if (event.key === 'ArrowLeft' || event.key === 'ArrowRight') {
                player.direction = 0;
            }
        });
    </script>
</body>
</html>
